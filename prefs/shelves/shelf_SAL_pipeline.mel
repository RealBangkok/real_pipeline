        -image1 "C:/Users/siras/Documents/maya/2016/prefs/icons/projectExplorer.png" 
        -style "iconOnly" 
        -marginWidth 1
        -marginHeight 1
        -command "import sys, os\nimport maya.cmds as cmds\n\n# define path to sal_pipeline directory here\nsal_modulepath = \"G:/programming/Python/sal_pipeline\"\n\nif os.environ.has_key(\"SAL_MODULE_PATH\"):\n    SAL_MODULE_PATH = os.environ[\"SAL_MODULE_PATH\"]\nelse :\n    SAL_MODULE_PATH = sal_modulepath\n    \nif not os.path.exists( SAL_MODULE_PATH ):\n    raise IOError( \"Path \\\"%s\\\" : not found.\"%SAL_MODULE_PATH );\n    \nprint \"\\n---- next step ---------------------------------------------\"\nif SAL_MODULE_PATH not in sys.path :\n    sys.path.append(SAL_MODULE_PATH)\n    print \"add \\\"%s\\\" to sys.path\\n\"%SAL_MODULE_PATH\nelse:\n    print(\"\\\"%s\\\" was exists. Skip add path.\\n\"%SAL_MODULE_PATH)\n\n#call project explorer.\nimport salPipeline\nreload(salPipeline)\n\nsalPipeline.app_projectExplorer()" 
        -sourceType "python" 
        -commandRepeatable 1
        -flat 1
    ;

} 
